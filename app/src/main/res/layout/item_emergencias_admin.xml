<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="185dp"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">
    <ImageButton

        android:id="@+id/Ib_mas_opciones2"
        android:padding="2dp"
        android:src="@drawable/ic_mas_opciones"
        android:background="@android:color/transparent"
        android:layout_alignParentEnd="true"
        android:layout_width="25dp"
        android:layout_height="25dp"/>
<!-- Imagen de la categoría -->
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="10dp"
    android:layout_weight="1"
    app:cardCornerRadius="0dp">

    <ImageView
        android:id="@+id/imagenCategoriaQS"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />
</androidx.cardview.widget.CardView>

<!-- Contenedor para Nombre de la categoría, Teléfono y Eliminar categoría -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <!-- Eliminar categoría -->
    <ImageButton
        android:id="@+id/Eliminar_catQS"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_eliminar_cat"
        android:layout_marginEnd="8dp" />

    <!-- Contenedor para Nombre de la categoría y Teléfono -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/Item_nombre_cat_aQS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/Item_nombre_catQS_a" />

        <TextView
            android:id="@+id/Et_Telefono_Or_libro_AdminLLa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/Et_Telefono_Or_libro_AdminLL" />


    </LinearLayout>


</LinearLayout>


</LinearLayout>

    </com.google.android.material.card.MaterialCardView>
