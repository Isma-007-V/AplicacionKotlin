<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Administrador.Agregar_Pdf_QS">
    <RelativeLayout
        android:id="@+id/toolbarRLAgregarPdfQS"
        android:layout_width="match_parent"
        android:layout_height="@dimen/m_toolbar_height">
        <ImageButton
            android:id="@+id/Ib_regresar"
            android:src="@drawable/ic_regresar"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/Txt_agregar_libro_QS"
            android:text="@string/Txt_agregar_libro_QS"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <!--Adjuntar-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/LlAdjuntarPdfQS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/toolbarRLAgregarPdfQS">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/inst"
            android:layout_gravity="center"
            android:layout_marginTop="5dp" />
        <ImageButton
            android:id="@+id/AdjuntarPdfIbQS"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_adjuntar_pdf"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <!--Informacion de libro-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_below="@id/LlAdjuntarPdfQS"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--titulo-->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/Et_titulo_Or_QS"
                android:hint="@string/Et_titulo_Or_QS"
                android:drawableStart="@drawable/ic_info"
                android:drawablePadding="10dp"
                android:inputType="textPersonName|textCapWords"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />

        </com.google.android.material.textfield.TextInputLayout>
        <!--Objetivo-->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/Et_objetivo_Or_libro_QS"
                android:hint="@string/Et_objetivo_Or_libro_QS"
                android:drawableStart="@drawable/ic_objetivo"
                android:drawablePadding="10dp"
                android:inputType="textAutoCorrect"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />

        </com.google.android.material.textfield.TextInputLayout>
        <!--Acciones-->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/Et_Acciones_Or_libro_QS"
                android:hint="@string/Et_Acciones_Or_libro_QS"
                android:drawableStart="@drawable/ic_trabajo"
                android:drawablePadding="10dp"
                android:inputType="textAutoCorrect"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />

        </com.google.android.material.textfield.TextInputLayout>
        <!--Numero telefonico-->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/Et_Telefono_Or_libro_QS"
                android:hint="@string/Et_Telefono_Or_libro_QS"
                android:drawableStart="@drawable/ic_telefono_inst"
                android:drawablePadding="10dp"
                android:inputType="number|phone"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />

        </com.google.android.material.textfield.TextInputLayout>

        <!--Categoria seleccionada -->
        <TextView
            android:id="@+id/Tv_categoria_libro_ORG_QS"
            android:hint="@string/Tv_categoria_Or_QS"
            app:drawableStartCompat="@drawable/ic_categoria"
            app:drawableEndCompat="@drawable/ic_abajo"
            android:drawablePadding="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:background="@drawable/forma_edit_text_qs"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton

            android:id="@+id/Btn_subir_archivo_OR_QS"
            android:text="@string/Btn_subir_archivo_qs"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>