<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="410dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="0dp"
    app:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400dp">

            <RelativeLayout
                android:id="@+id/RLPdfQS"
                android:layout_width="100dp"
                android:layout_height="180dp"
                android:layout_marginEnd="10dp"
                android:background="#ccc">

                <!--Visuializar PDF-->
                <com.github.barteksc.pdfviewer.PDFView
                    android:id="@+id/VisualizadorPDFQS"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ProgressBar
                    android:id="@+id/progressBarQS"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </RelativeLayout>
            <ImageButton

                android:id="@+id/Ib_mas_opciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="4dp"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:src="@drawable/ic_mas_opciones" />
            <!--titulo-->
            <TextView
                android:id="@+id/Txt_titulo_libro_itemQS"
                android:text="@string/Txt_titulo_libro_itemQS"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="25dp"
                android:layout_below="@id/Ib_mas_opciones"
                android:maxLines="2"
                android:layout_toEndOf="@+id/RLPdfQS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!--Objetivo-->
            <TextView
                android:id="@+id/Txt_Objetivo_libro_itemQS"
                android:text="@string/Txt_Objetivo_libro_itemQS"
                android:layout_toEndOf="@+id/RLPdfQS"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/Txt_titulo_libro_itemQS"
                android:maxLines="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <!--Acciones-->
            <TextView
                android:id="@+id/Txt_acciones_libro_itemQS"
                android:text="@string/Txt_acciones_libro_itemQS"
                android:layout_toEndOf="@+id/RLPdfQS"
                android:layout_marginStart="5dp"
                android:layout_marginTop="50dp"
                android:layout_below="@+id/Txt_Objetivo_libro_itemQS"
                android:maxLines="6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <!--Telefono-->
            <TextView
                android:id="@+id/Txt_telefono_libro_itemQS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Txt_acciones_libro_itemQS"
                android:layout_marginStart="-98dp"
                android:layout_marginTop="45dp"
                android:layout_toEndOf="@+id/RLPdfQS"
                android:maxLines="4"
                android:text="@string/Txt_telefono_libro_itemQS" />
            <!--Categoria-->
            <TextView
                android:id="@+id/Txt_categoria_libro_adminQS"
                android:text="@string/Txt_categoria_libro_adminQS"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <!--tamaÃ±o-->
            <TextView
                android:id="@+id/Txt_tamanio_libro_adminQS"
                android:text="@string/Txt_tamanio_libro_adminQS"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/RLPdfQS"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!--Fecha-->
            <TextView
                android:id="@+id/Txt_fecha_libro_adminQS"
                android:text="@string/Txt_fecha_libro_adminQS"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/Txt_categoria_libro_adminQS"
                android:layout_toEndOf="@+id/Txt_tamanio_libro_adminQS"
                android:textAlignment="center"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </RelativeLayout>


</com.google.android.material.card.MaterialCardView>